# i3 config file (v4)
# Please see https://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod4

font pango:JetBrainsMono Nerd Font 12



# ------- i3 related keybindings -------

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# kill focused window
bindsym $mod+Shift+q kill

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal/vertical orientation
bindsym $mod+t split toggle

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+v layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling/floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

#focus the child container
bindsym $mod+d focus child

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart



# ------- Other keybindings -------

# Use pamixer to adjust volume and mute and unmute in PipeWire.
bindsym XF86AudioRaiseVolume exec --no-startup-id pamixer --increase 5
bindsym XF86AudioLowerVolume exec --no-startup-id pamixer --decrease 5
bindsym XF86AudioMute exec --no-startup-id pamixer --toggle-mute
# TODO: Apply to every source and not just the default.
bindsym XF86AudioMicMute exec --no-startup-id pamixer --default-source --toggle-mute

# start a terminal
bindsym $mod+Tab exec kitty

# Change keyborad layout.
set $x 53
bindcode Mod1+$x exec --no-startup-id "(setxkbmap -query | grep us,) && (setxkbmap ar,us | echo '1') || setxkbmap us,ar"

# Open app launcher with the Mod4 key.
# The --release is used so it doesn't conflict with the other key bindings.
bindcode 133 --release exec "rofi -modi drun,window,filebrowser -show drun"

# Open calculator.
bindsym $mod+c exec "rofi -modi calc -show calc"

# Open emoji picker.
bindsym $mod+comma exec "rofi -modi emoji -show emoji"

# Open window selector.
# TODO:
# bindsym $mod+ exec "rofi -modi window -show window"

# Open firefox bookmarks launcher.
bindsym $mod+b exec "rofi -modi foxmarks:~/scripts/rofi/firefox_bookmarks.py -show foxmarks"

# Manage session.
bindsym $mod+q exec "rofi -modi managesession:~/scripts/rofi/manage_session.sh -show managesession"

# Start the files browser.
bindsym $mod+e exec "dolphin"

# Translate selected text.
bindsym $mod+g exec --no-startup-id "~/scripts/translate_selection.py"

# Save a screen shot for the whole desktop.
# bindsym Print exec "import -window root ~/Pictures/Screenshot_$(date '+%Y%m%d-%H%M%S').webp"

# Open the screen shot tool.
bindsym Print exec flameshot gui

# ClipBoard manager
bindsym $mod+p exec clipcat-menu insert
bindsym $mod+o exec clipcat-menu remove
bindsym $mod+Shift+o exec --no-startup-id clipcatctl clear

## Toggle the notification center view.
bindsym $mod+grave exec --no-startup-id "kill -s USR1 $(pidof deadd-notification-center)"

# TODO: Key to toggle redshift
# bindsym $mod+ exec --no-startup-id "pkill -USR1 redshift-gtk"



# ------- i3 modes -------

# Resize window mode.
mode "resize" {
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"



# ------- Set the appearance of the windows borders and gaps in i3 -------

# Window borders settings.
for_window [class=".*"] border pixel 3
smart_borders on

# Widnow gaps settings.
smart_gaps on
gaps inner 7
gaps outer 2



# ------- Set i3 colors -------

# class                  border    backgr.   text      indicator child_border
client.focused           #800000   #800000   #ffffff   #b80000   #800000
client.focused_inactive  #360000   #360000   #888888   #800000   #360000
client.unfocused         #00000000 #222222   #888888   #292d2e   #222222
client.urgent            #2f343a   #ff0050   #ffffff   #ff0050   #ff0050
client.placeholder       #000000   #0c0c0c   #ffffff   #000000   #0c0c0c

client.background        #ffffff50



# ------- Autostart scripts and deamons -------

# Restore wallpaper.
exec_always --no-startup-id nitrogen --set-zoom-fill --random  ~/pictures/wallpapers

# Set the behavior of the caps lock key.
exec_always --no-startup-id setxkbmap -option 'caps:escape'
bindcode Shift+66 exec --no-startup-id "xdotool key Caps_Lock"

# Turn on the num lock.
exec --no-startup-id numlockx

# Start the panel.
exec_always --no-startup-id $HOME/.config/polybar/launch.sh

# Start clipboard manager deamon.
exec --no-startup-id clipcatd

# Start autotiling.
# exec_always --no-startup-id autotiling-rs # works only in sway
exec_always --no-startup-id autotiling

# Start the notification center and server.
exec --no-startup-id deadd-notification-center

# NetworkManager system tray GUI.
exec --no-startup-id nm-applet

# Start Geoclue Demo agent
exec --no-startup-id /usr/lib/geoclue-2.0/demos/agent

# Start the composetor
exec_always --no-startup-id picom

# Start redshift to protect my eyes.
exec --no-startup-id redshift-gtk

# Open KWallet PAM Socket Connection
exec --no-startup-id /usr/lib/pam_kwallet_init

# Start RSIBreak.
exec --no-startup-id "rsibreak --autostart"

# Start XDG autostart .desktop files using dex (Only files in ~/.config/autostart).
# See also: https://wiki.archlinux.org/index.php/XDG_Autostart
exec --no-startup-id "dex --autostart --environment i3 --search-paths ~/.config/autostart"

# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use xdg-screensaver to lock your screen.
exec_always --no-startup-id "xset s 900 300"
exec --no-startup-id "xss-lock --transfer-sleep-lock -- xdg-screensaver lock"
