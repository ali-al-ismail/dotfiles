# ------- i3 modes -------

# Resize window mode.
mode "resize" {
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"



# ------- Set the appearance of the windows borders and gaps in i3 -------

# Window borders settings.
for_window [class=".*"] border pixel 3
smart_borders on

# Widnow gaps settings.
smart_gaps on
gaps inner 7
gaps outer 2



# ------- Set i3 colors -------

# class                  border    backgr.   text      indicator child_border
client.focused           #800000   #800000   #ffffff   #b80000   #800000
client.focused_inactive  #360000   #360000   #888888   #800000   #360000
client.unfocused         #00000000 #222222   #888888   #292d2e   #222222
client.urgent            #2f343a   #ff0050   #ffffff   #ff0050   #ff0050
client.placeholder       #000000   #0c0c0c   #ffffff   #000000   #0c0c0c

client.background        #ffffff50



# ------- Autostart scripts and deamons -------

# Set random wallpaper.
exec_always --no-startup-id "feh --no-fehbg --bg-tile $(find $HOME/Pictures/wallpapers/ -type f  | shuf -n 1)"

# Set the behavior of the caps lock key.
exec_always --no-startup-id setxkbmap -option 'caps:escape_shifted_capslock'

# Turn on the num lock.
exec --no-startup-id numlockx

# Start the panel.
exec_always --no-startup-id $HOME/.config/polybar/launch.sh

# Start clipboard manager deamon.
exec --no-startup-id "CM_IGNORE_WINDOW='KeePassXC$' clipmenud"

# Start autotiling.
# exec_always --no-startup-id autotiling-rs # works only in sway
exec_always --no-startup-id autotiling

# Start the notification center and server.
exec --no-startup-id dunst

# NetworkManager system tray GUI.
exec --no-startup-id nm-applet

# Start Geoclue Demo agent
exec --no-startup-id /usr/lib/geoclue-2.0/demos/agent

# Start the composetor
exec_always --no-startup-id picom

# Start redshift to protect my eyes.
exec --no-startup-id redshift-gtk

# Open KWallet PAM Socket Connection
exec --no-startup-id "gnome-keyring-daemon --start --components=secrets"

# polkit authentication agents
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1

# Check if there was any battery and start battery system tray icon.
exec --no-startup-id "if [[ $(cbatticon -p | grep type) ]]; then cbatticon; fi"

# Start RSIBreak.
exec --no-startup-id "rsibreak"

# Start XDG autostart .desktop files using dex (Only files in ~/.config/autostart).
# See also: https://wiki.archlinux.org/index.php/XDG_Autostart
exec --no-startup-id "dex --autostart --environment i3 --search-paths ~/.config/autostart"

# Setup xss-lock to manage locking and suspending.
exec_always --no-startup-id "xset dpms 0 600 600"
exec --no-startup-id "xss-lock --transfer-sleep-lock --notifier=/usr/lib/xsecurelock/dimmer -- ~/scripts/lock.sh"
